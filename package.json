{
  "name": "qontract-server",
  "version": "2.0.0",
  "description": "qontract graphql server",
  "author": "Red Hat App SREs <sd-app-sre@redhat.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "watch": "rm -rf ./dist && tsc --watch",
    "build": "rm -rf ./dist && tsc",
    "server": "node ./dist/server.js",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test": "mocha",
    "update-graphql-schema": "scripts/update-graphql-schema.js test/graphql_schema.json $(find test -name '*.data.json')",
    "debug": "node --inspect --require ts-node/register src/server.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.926.0",
    "apollo-server-express": "^2.18.0",
    "deep-diff": "1.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.16.4",
    "express-prom-bundle": "^6.0.0",
    "graphql": "^14.7.0",
    "jsonpointer": "^5.0.1",
    "prom-client": "^12.0.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.12",
    "@types/express": "4.16.1",
    "@types/graphql": "14.5.0",
    "@types/mocha": "10.0.10",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "chai": "4.5.0",
    "chai-http": "4.4.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "mocha": "11.7.5",
    "ts-node": "10.9.2",
    "typescript": "3.8.3"
  },
  "mocha": {
    "require": "ts-node/register",
    "extensions": [
      "ts"
    ],
    "spec": [
      "test/**/*.ts"
    ]
  }
}
